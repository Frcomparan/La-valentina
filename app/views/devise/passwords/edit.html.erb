<div class="forms-container">
  <div class="left-half reset-password-left-half"></div>
  <div class="right-half">
    <h2>Cambiar contrase単a</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: 'Nueva contrase単a' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirma tu nueva contrase単a' %>
      </div>
      <div class="actions">
        <%= f.submit "Cambiar mi contrase単a" %>
      </div>
    <% end %>
    <div class="shared-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
