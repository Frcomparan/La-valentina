<div class="forms-container">
  <div class="left-half registration-left-half"></div>
  <div class="right-half">
    <h2>Registrate</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Nombre', required: true %>
      </div>
      <div class="field">
        <%= f.email_field :email, autocomplete: "email", placeholder: 'Correo electronico', required: true %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Contraseña', required: true %>
        <% if @minimum_password_length %>
          <em>(Mínimo <%= @minimum_password_length %> carácteres)</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirma tu contraseña', required: true %>
      </div>
      <div class="actions">
        <%= f.submit "Crear cuenta" %>
      </div>
    <% end %>
    <div class="shared-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
