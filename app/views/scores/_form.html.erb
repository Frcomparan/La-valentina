<%= form_with(model: score, url: course_scores_path(course) ) do |form| %>
  <div class="mb-3">
    <%= form.label :value, style: "display: block", class: "form-label" do %>
      Calificaci√≥n: <span id="form-range-value" >0</span>
    <% end %>
    <%= form.range_field :value, class: "form-range",value: 0, min: 0, max: 5, step: 0.01, required: true %>
    <div style="color: red">
      <% if score.errors.include?(:value) %>
        <% score.errors.full_messages_for(:value).each do |error_message| %>
          <%= error_message %>.
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="mb-3">
    <%= form.label :description, 'Comentarios', style: "display: block", class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
    <div style="color: red">
      <% if score.errors.include?(:description) %>
        <% score.errors.full_messages_for(:description).each do |error_message| %>
          <%= error_message %>.
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="mb-3">
    <%= form.submit "Guardar", class: "btn btn-success btn-block" %>
  </div>
<% end %>
<script>
  const input = document.getElementById('score_value')
  const value = document.getElementById('form-range-value')

  input.addEventListener("input", (event) => {
    value.textContent = event.target.value
  })
</script>
