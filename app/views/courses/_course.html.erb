<div id="<%= dom_id course %>">
  <p>
    <strong>Name:</strong>
    <%= course.name %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= course.description %>
  </p>
  <p>
    <strong>Price:</strong>
    <%= course.price.round(2) %>
  </p>
  <p>
    <strong>Cover:</strong><br>
    <% if course.cover.attached? %>
      <%= image_tag course.cover.representation(resize_to_limit: [400, 400]) %>
    <% end %>
    <br>
    <%= link_to course.cover.filename, course.cover if course.cover.attached? %>
  </p>
  <p>
    <strong>User:</strong>
    <%= course.user_id %>
  </p>
</div>
