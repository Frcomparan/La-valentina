<div id="<%= dom_id course %>" class="course">
  <figure>
    <% if course.cover.attached? %>
      <%= image_tag course.cover.representation(resize_to_limit: [400, 400]) %>
      <%= render 'partials/course-score', course: course %>
    </figure>
  <% end %>
  <div class="data">
    <p class="name">
      <strong>
        <%= course.name %>
      </strong>
    </p>
    <p>
      <%= course.description %>
    </p>
    <p>
      <strong>
        $<%= course.price.round(2) %>
      </strong>
    </p>
    <button>
      COMPRAR
    </button>
  </div>
</div>
