<div class="admin-container">
  <%= render "partials/admin-aside" %>
  <main class="admin-content">
    <%= render "partials/admin-nav" %>
    <header>
      <h2>Tus cursos</h2>
      <form action="">
        <label for="">
          <img src=<%= asset_path 'png/12.png' %> alt="">
        </label>
        <input type="text" placeholder="Buscar curso">
      </form>
    </header>
    <div class="courses-list">
      <% @courses.each do |course| %>
        <%= link_to course do %>
          <%= render course %>
        <% end %>
      <% end %>
      <%= link_to new_course_path, class: 'create-link' do %>
        <img src=<%= asset_path 'png/7.png' %> alt="">
      <% end %>
    </div>
  </main>
</div>
