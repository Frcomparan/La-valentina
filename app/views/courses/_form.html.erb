<%= form_with(model: course) do |form| %>
  <% if course.errors.any? %>
    <div style="color: red">
      <h2>Hubo problemas con el registro</h2>
      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="data">
    <div class="fields">
      <%= form.label :name, 'Titulo' %>
      <%= form.text_field :name, required: true, maxlength: 60 %>
    </div>
    <div class="fields">
      <%= form.label :description, 'DescripciÃ³n' %>
      <%= form.text_area :description, required: true, maxlength: 170 %>
    </div>
    <div class="fields">
      <%= form.label :price, 'Precio' %>
      <%= form.text_field :price, required: true %>
    </div>
  </div>
  <div class="media-content">
    <div class="fields">
      <%= form.label :cover do %>
        <span>Miniatura</span>
        <div>
          <%= form.file_field :cover, onchange: 'displayPicture(event)' %>
        </div>
        <div class="upload">
          <% if course.cover.attached? %>
            <%= image_tag course.cover.representation(resize_to_limit: [400, 400]), id: 'cover'%>
          <% else %>
            <img src=<%= asset_path 'png/7.png' %> alt="uploader-cover" id="cover">
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="actions">
    <%= form.submit 'Guardar' %>
  </div>
<% end %>
<script>
  function displayPicture(event) {
    const input = event.target
    if (input.files && input.files[0]) {
      const reader = new FileReader()

      reader.onload = function (e) {
        document.getElementById('cover').setAttribute('src', e.target.result)
      }

      reader.readAsDataURL(input.files[0])
    }
  }
</script>
