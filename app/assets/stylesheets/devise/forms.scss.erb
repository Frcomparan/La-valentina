.forms-container {
  display: flex;
  height: 100vh;
  overflow: hidden;
  background-color: #000;

  .left-half {
    flex: 1;
    background-size: cover;
    /*Animacion*/
    animation-name: slide-in-left;
    animation-duration: 2s;
    animation-delay: 0.5s;
    animation-fill-mode: forwards;
    opacity: 0;
  }

  .login-left-half {
    background-image: url(<%=asset_path'bgs/bg-2.jpeg'%>);
  }

  .reset-password-left-half {
    background-image: url(<%=asset_path'bgs/bg-2.jpeg'%>);
  }

  .edit-information-left-half {
    background-image: url(<%=asset_path'bgs/bg-1.jpg'%>);
  }

  .registration-left-half {
    background-size: cover;
    background-image: url(<%=asset_path'bgs/bg-1.jpg'%>);
  }

  @keyframes slide-in-left {
    from {
      transform: translateX(-100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  .right-half {
    flex: 1;
    overflow: auto;
    background-color: #000;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    font-family: 'TT Commons Pro', sans-serif;
    color: #f9f7f0;
  }

  .edit-form {
    padding-top: 200px;
    margin-bottom: 40px;
  }

  .check-option {
    display: flex;
    align-items: center;
    gap: 20px;

    input {
      width: auto;
      margin: 0;
    }

    label {
      margin: 0;
    }
  }

  form {
    width: 60%;
    margin-bottom: 10px;
  }

  .login-box {
    background-color: #000;
    padding: 30px;
    border-radius: 10px;
    text-align: center;
    /*Animation*/
    animation-name: slide-in;
    animation-duration: 1s;
    animation-delay: 0.5s;
    animation-fill-mode: forwards;
    opacity: 0;
  }

  @keyframes slide-in {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  h2 {
    margin-bottom: 20px;
    font-size: 28px;
  }

  .field {
    margin-bottom: 8px;
  }

  label {
    display: block;
    margin-bottom: 5px;
  }

  ::placeholder {
    color: #000;
    opacity: 10;
    text-indent: 30px;
  }

  input {
    background-color: #fff;
    color: #000;
    background-position: 10px center;
    background-size: auto 20px;
    background-repeat: no-repeat;
    font-size: 16px;
    width: 100%;
    padding: 10px;
    border-radius: 50px;
    border: none;
    margin-bottom: 10px;
    text-indent: 30px;
  }

  input[name='user[name]'] {
    background-image: url(<%=asset_path'user.png'%>);
  }

  input[type='email'] {
    background-image: url(<%=asset_path'email.png'%>);
  }

  input[type='password'] {
    background-image: url(<%=asset_path'password.png'%>);
  }

  a {
    color: #f9f7f0;
    text-decoration: none;
    font-size: 16px;
  }

  a:hover {
    text-decoration: underline;
  }

  .actions {
    width: 100%;
  }

  input[type='submit'] {
    background-color: #2452ab;
    color: #f9f7f0;
    padding: 10px 20px;
    border-radius: 50px;
    border: none;
    cursor: pointer;
    margin-bottom: 10px;
    font-size: 16px;
    font-weight: bold;
    width: 100%;
    transition: all 0.3s ease-in-out;
  }

  input[type='submit']:hover {
    background-color: navy;
  }

  p {
    margin-top: 20px;
    color: #fff;
    font-size: 18px;
  }

  .text-label {
    display: inline-block;
    color: #f9f7f0;
    font-size: 18px;
    margin-bottom: 10px;
  }

  .shared-links {
    display: flex;
    flex-direction: column;
    width: 60%;
  }

  .delete-account-container {
    display: flex;
    flex-direction: column;
    width: 60%;
    gap: 6px;

    p {
      margin: 0;
    }

    & > form {
      margin: 0;
      width: 100%;
    }

    button {
      background-color: #da4c4c;
      color: #f9f7f0;
      padding: 10px 20px;
      border-radius: 50px;
      border: none;
      cursor: pointer;
      margin-bottom: 10px;
      font-size: 18px;
      font-weight: bold;
      width: 100%;
      transition: all 0.3s ease-in-out;

      &:hover {
        background-color: #771212;
      }
    }
  }
}
